          method: "POST",
          contentType: "application/json", // Set the content type to JSON
          data: { product: productId }, // Stringify the data
          success: function (response) {
            if (response.status == 201 || response.status == 200) {
              // show success message
              Swal.fire({
                icon: "success",
                title: "Success",
                text: "Product added to wishlist successfully."
              });
            } else {
              // show error message
              Swal.fire({
                icon: "warning",
                title: "Warning",
                text: response.message ? response.message : "Unabled to add to wishlist! If you're not logged in, please log in to add product to wishlist.",
              });
            }
          },
          error: function (err, xhr, status) {
            // show error message
            Swal.fire({
              icon: "error",
              title: "Error",
              text: "Something Went wrong! If you're not logged in, please log in to add product to wishlist.",
            });
          },
        });
      });
